{
    "name": "crazko/romanvesely.com",
    "description": "personal site",
    "authors": [
        {
            "name": "Roman Vesely",
            "email": "info@romanvesely.com"
        }
    ],
    "autoload": {
      "psr-4": {
        "Crazko\\Site\\": "libs"
      }
    },
    "require": {
        "nette/utils": "^2.4",
        "nette/finder": "^2.4",
        "symplify/statie": "^2.5"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.8.5",
        "symplify/easy-coding-standard": "^2.5"
    },
    "scripts": {
      "check": [
        "@ecs",
        "@phpstan"
      ],
      "ecs": "vendor/bin/ecs check libs",
      "phpstan": "vendor/bin/phpstan analyse -l 7 libs --ansi"
    }
}
