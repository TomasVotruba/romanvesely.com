---
layout: default
title: Playground
---

{block content}
{foreach $projects['trivial'] as $project}
	{ifset $project['image']}
		{include "image", src => $project['image'], url => $project['url']}
	{/ifset}

	<h2><a href="{$project['url']}">{$project['name']}</a></h2>
	<h3>{$project['title']}</h3>
	<p>{$project['description']}</p>
	{ifset $project['repository']}<p><a href="{$project['repository']}" class="link--more">Look inside</a><p>{/ifset}
{/foreach}
{/block}
